---
import { homepage } from "../../public/data/data.json";
const { statsSection } = homepage;
---

<section class="py-8">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-4">{statsSection.title}</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      {
        statsSection.stats.map((stat, index) => (
          <div id={index.toString()} class="p-4 bg-white rounded-lg shadow-md">
            <h3 class="text-xl font-semibold">{stat.label}</h3>
            <p class="text-2xl text-blue-500">{stat.value}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
