---
import { homepage } from "../../public/data/data.json";
import Service from "./Service.astro";
const { servicesSection } = homepage;
---

<section class="py-8">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-4">{servicesSection.title}</h2>
    <p class="text-gray-700 text-center mb-8">{servicesSection.description}</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        servicesSection.services.map((service) => (
          <Service service={service} id={service.id} />
        ))
      }
    </div>
  </div>
</section>
