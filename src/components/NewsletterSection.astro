---
import { homepage } from "../../public/data/data.json";
const { newsletterSection } = homepage;
---

<section class="bg-gray-700 py-8 text-white">
  <div class="container mx-auto text-center">
    <h2 class="text-2xl font-bold mb-4">{newsletterSection.title}</h2>
    <p class="text-gray-300 mb-4">{newsletterSection.description}</p>
    <div set:html={newsletterSection.formHtml} class="max-w-md mx-auto" />
  </div>
</section>
