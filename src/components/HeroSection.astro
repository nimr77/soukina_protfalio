---
import { homepage } from "../../public/data/data.json";
const { heroSection } = homepage;
---

<section class="py-12 bg-blue-100">
  <div class="container mx-auto text-center">
    <h1 class="text-4xl font-bold mb-4">{heroSection.title}</h1>
    <p class="text-lg text-gray-700 mb-8">
      {heroSection.description}
    </p>
    <a
      href={heroSection.button.link}
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
    >
      {heroSection.button.label}
    </a>
  </div>
</section>
