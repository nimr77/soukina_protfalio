---
import { homepage } from "../../../public/data/data.json";
import ServiceCard from "./services";
const { servicesSection } = homepage;
---

<section class="py-8 bg-white">
  <div class="container mx-auto">
    <h2 class="text-3xl text-gray-700 font-bold text-center mb-4">
      {servicesSection.title}
    </h2>
    <p class="text-gray-700 text-center mb-8">{servicesSection.description}</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        servicesSection.services.map((service) => (
          <ServiceCard service={service} id={service.id} client:load />
        ))
      }
    </div>
  </div>
</section>
